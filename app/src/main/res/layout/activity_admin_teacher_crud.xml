<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/viewBackground"
    tools:context=".AdminTeacherCRUD">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <!-- Text view để hiển thị thông tin chi tiết tài khoản -->
        <TextView
            android:id="@+id/textViewAccountDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#4169E1"
            android:text="Thông tin chi tiết giảng viên"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />
        <TextView
            android:id="@+id/txtTeacherId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:text="Thông tin chi tiết giảng viên"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtTeacherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:text="Thông tin chi tiết giảng viên"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtTeacherEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:text="Thông tin chi tiết giảng viên"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtTeacherPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:text="Thông tin chi tiết giảng viên"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtTeacherSoLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:text="Thông tin chi tiết giảng viên"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp">

            <Button
                android:id="@+id/buttonEditTeacher"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Chỉnh sửa"
                android:background="#4169E1"/>

            <!-- Nút xoá tài khoản -->
            <Button
                android:background="#4169E1"
                android:layout_marginLeft="16dp"
                android:id="@+id/buttonDeleteTeacher"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Xoá" />
        </LinearLayout>
        <!-- Nút sửa tài khoản -->

    </LinearLayout>
</LinearLayout>